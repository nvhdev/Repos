@{
    ViewBag.Title = "Login pagina";
}
@model TestIdentityServer3.Models.LoginModel

<div class="col-xs-6 col-xs-offset-3">
    <h1>@Model.Titel</h1>
</div>


@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Titel)
<div class="row">
    
    <div class="col-xs-6 col-xs-offset-3">
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", style = "max-width:initial" })
        </div>
        @if (!string.IsNullOrEmpty(Model.FoutMelding))
        {
            <div class="alert alert-danger" role="alert">
                @Model.FoutMelding
            </div>
        }
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Login</button>
        </div>

    </div>
</div>


}